<%-layout('layouts/boilerplate') %>
<form action="/products" novalidate class="needs-validation" method="POST">
	<div class="row offset-3">
		<div class="col-8">
			<div>
				<label for="title" class="form-label">Title</label>
				<input
					type="text"
					name="title"
					id="title"
					class="form-control"
					required
				/>
				<div class="valid-feedback">Looks good!</div>
			</div>
			<div>
				<label for="image" class="form-label">Image</label>
				<input
					type="text"
					name="image"
					id="image"
					class="form-control"
					required
				/>
				<div class="valid-feedback">Looks good!</div>
			</div>
			<div>
				<label for="image" class="form-label">Price</label>
				<div class="input-group mb-3">
					<span class="input-group-text">$</span>
					<input
						type="text"
						class="form-control"
						aria-label="Amount (to the nearest dollar)"
						name="price"
                        required
					/>
					<div class="valid-feedback">Looks good!</div>
				</div>
			</div>

			<div>
				<label for="description" class="form-label">Description</label>
				<textarea
					name="description"
					id="description"
					class="form-control"
                    required
				></textarea>
				<div class="valid-feedback">Looks good!</div>
			</div>
			<button class="btn btn-success mt-3">Create product</button>
		</div>
	</div>
</form>
