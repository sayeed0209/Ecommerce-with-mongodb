<%-layout('layouts/boilerplate') %>
<form action="/register" novalidate class="needs-validation" method="POST">
	<div class="row offset-3">
		<div class="col-6">
			<div>
				<label for="username" class="form-label">username</label>
				<input
					type="text"
					name="username"
					id="username"
					class="form-control"
					required
				/>
				<div class="valid-feedback">Looks good!</div>
			</div>
			<div>
				<label for="email" class="form-label">Email</label>
				<input
					type="email"
					name="email"
					id="email"
					class="form-control"
					required
				/>
				<div class="valid-feedback">Looks good!</div>
			</div>
			<div>
				<label for="password" class="form-label">Password</label>
				<input
					type="password"
					name="password"
					id="password"
					class="form-control"
					required
				/>
				<div class="valid-feedback">Looks good!</div>
			</div>
			<button class="btn btn-success mt-3">Sign up</button>
		</div>
	</div>
</form>
